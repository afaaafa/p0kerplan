<%= form_with(model: vote, class: "contents") do |form| %>
  <% if vote.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(vote.errors.count, "error") %> prohibited this vote from being saved:</h2>

      <ul class="list-disc ml-6">
        <% vote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :issue_id %>
    <%= form.text_field :issue_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vote.errors[:issue_id].none?, "border-red-400 focus:outline-red-600": vote.errors[:issue_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :participant_id %>
    <%= form.text_field :participant_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vote.errors[:participant_id].none?, "border-red-400 focus:outline-red-600": vote.errors[:participant_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :participant_name %>
    <%= form.text_field :participant_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vote.errors[:participant_name].none?, "border-red-400 focus:outline-red-600": vote.errors[:participant_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :value %>
    <%= form.text_field :value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": vote.errors[:value].none?, "border-red-400 focus:outline-red-600": vote.errors[:value].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
