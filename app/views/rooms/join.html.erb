<% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
<% end %>

<div>
  <h1>Room: <%= @room.name %></h1>
  
  <%= form_with url: identify_room_path(@room.slug), method: :post do |f| %>
    <div class="field">
      <%= f.label :name, "How do want to be called?" %><br>
      <%= f.text_field :participant_name, placeholder: "Your name or nickname", required: true, autofocus: true %>
    </div>

   
    <%= f.submit "Join Room", class: "button primary" %>
  <% end %>
</div>