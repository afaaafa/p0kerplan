<% content_for :title, "Join Room" %>

<div class="min-h-screen flex flex-col items-center justify-center py-12">
  
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <h1 class="font-bold text-4xl mb-2"><%= @room.name %></h1>
      <p class="text-gray-500">Please identify yourself to join the conversation.</p>
    </div>

    <div class="bg-white p-8 border border-gray-200 rounded-xl shadow-sm">
        <% if notice.present? %>
          <div class="w-full max-w-md mb-4">
            <p class="py-3 px-4 bg-green-50 text-green-600 font-medium rounded-xl border border-green-100 text-center" id="notice">
              <%= notice %>
            </p>
          </div>
        <% end %>
      <%= form_with url: identify_room_path(@room.slug), method: :post, class: "space-y-6" do |f| %>
        
        <div>
          <%= f.label :participant_name, "How do you want to be called?", class: "font-medium text-gray-700" %>
          <%= f.text_field :participant_name, 
              placeholder: "Your name or nickname", 
              required: true, 
              autofocus: true,
              class: "w-full px-4 py-2 mt-5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all" %>
        </div>

        <%= f.submit "Join Room", 
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg cursor-pointer transition-colors shadow-sm" %>
      <% end %>
    </div>

    <div class="text-center mt-6">
      <%= link_to "Back to rooms", rooms_path, class: "text-gray-500 hover:text-gray-700 hover:underline transition-all" %>
    </div>
  </div>

</div>